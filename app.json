{
  "expo": {
    "name": "Tizly",
    "slug": "tizly",
    "owner": "markjvoltaire",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/Tizlymed.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/Tizlymed.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow access to photos to upload photos from your library."
      },
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },

    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Tizly wants to access your camera roll"
        }
      ]
    ]
  }
}
